
{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/login", "dest": "/index.html" },
    { "src": "/signup", "dest": "/index.html" },
    { "src": "/dashboard", "dest": "/index.html" },
    { "src": "/onboarding", "dest": "/index.html" },
    { "src": "/create-organization", "dest": "/index.html" },
    { "src": "/organizations", "dest": "/index.html" },
    { "src": "/not-found", "dest": "/index.html" },
    { "src": "/settings", "dest": "/index.html" },
    { "src": "/profile", "dest": "/index.html" },
    { "src": "/contacts", "dest": "/index.html" },
    { "src": "/properties", "dest": "/index.html" },
    { "src": "/calendar", "dest": "/index.html" },
    { "src": "/reports", "dest": "/index.html" },
    { "src": "/admin", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
