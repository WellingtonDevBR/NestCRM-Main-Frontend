
# Redirects for SPA - all routes should go to index.html
/*  /index.html  200

# Special handling for the dashboard path
/dashboard/*  /index.html  200

# Special handling for direct dashboard access (for subdomains too)
/dashboard  /index.html  200

# Special handling for auth redirections with query parameters
/dashboard?*  /index.html  200

# Handle all paths on all subdomains correctly
https://*.nestcrm.com.au/*  /index.html  200

